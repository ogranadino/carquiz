<% if @answer.errors.any? %>
  <% @answer.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Answer #<%= @answer.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_answer/<%= @answer.id %>" class="form-horizontal">
      <!-- Label and input for id_question -->
      <div class="form-group">
        <label for="id_question" class="col-sm-2 control-label">
          Id question
        </label>
        <div class="col-sm-10">
          <input type="text" id="id_question" name="id_question" placeholder="Id question" class="form-control" value="<%= @answer.id_question %>">
        </div>
      </div>

      <!-- Label and input for id_user -->
      <div class="form-group">
        <label for="id_user" class="col-sm-2 control-label">
          Id user
        </label>
        <div class="col-sm-10">
          <input type="text" id="id_user" name="id_user" placeholder="Id user" class="form-control" value="<%= @answer.id_user %>">
        </div>
      </div>

      <!-- Label and input for answer -->
      <div class="form-group">
        <label for="answer" class="col-sm-2 control-label">
          Answer
        </label>
        <div class="col-sm-10">
          <input type="text" id="answer" name="answer" placeholder="Answer" class="form-control" value="<%= @answer.answer %>">
        </div>
      </div>

      <!-- Label and input for likes -->
      <div class="form-group">
        <label for="likes" class="col-sm-2 control-label">
          Likes
        </label>
        <div class="col-sm-10">
          <input type="text" id="likes" name="likes" placeholder="Likes" class="form-control" value="<%= @answer.likes %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Answer" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

