<div class="page-header">
  <h1>Answers</h1>
</div>

<p><a href="/answers/new" class="btn btn-primary">Add a New Answer</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Id question</th>
      <th>Id user</th>
      <th>Answer</th>
      <th>Likes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.id_question %></td>
        <td><%= answer.id_user %></td>
        <td><%= answer.answer %></td>
        <td><%= answer.likes %></td>
        <td>
          <a href="/answers/<%= answer.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/answers/<%= answer.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_answer/<%= answer.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

