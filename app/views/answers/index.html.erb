<div class="page-header">
  <h1>Answers</h1>
</div>



<table class="table table-hover">
  <thead>
    <tr>
      <th>Question</th>
      <th>User</th>
      <th>Answer</th>
      <th>Likes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <!--<%question = Question.find_by(answer.id_question)%>-->
      <tr>
        <td><%= Question.find(answer.id_question).question %></td>
        <td><%= User.find(answer.id_user).email %></td>
        <td><%= answer.answer %></td>
        <td><%= answer.likes %></td>
        <td>
          <a href="/answers/<%= answer.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/answers/<%= answer.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_answer/<%= answer.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

