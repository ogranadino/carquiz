<% if @auto.errors.any? %>
  <% @auto.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Auto</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_auto" class="form-horizontal">
      <!-- Label and input for brand -->
      <div class="form-group">
        <label for="brand" class="col-sm-2 control-label">
          Brand
        </label>
        <div class="col-sm-10">
          <input type="text" id="brand" name="brand" placeholder="Brand" class="form-control" value="<%= @auto.brand %>">
        </div>
      </div>

      <!-- Label and input for model -->
      <div class="form-group">
        <label for="model" class="col-sm-2 control-label">
          Model
        </label>
        <div class="col-sm-10">
          <input type="text" id="model" name="model" placeholder="Model" class="form-control" value="<%= @auto.model %>">
        </div>
      </div>

      <!-- Label and input for year -->
      <div class="form-group">
        <label for="year" class="col-sm-2 control-label">
          Year
        </label>
        <div class="col-sm-10">
          <input type="text" id="year" name="year" placeholder="Year" class="form-control" value="<%= @auto.year %>">
        </div>
      </div>

      <!-- Label and input for price_low -->
      <div class="form-group">
        <label for="price_low" class="col-sm-2 control-label">
          Price low
        </label>
        <div class="col-sm-10">
          <input type="text" id="price_low" name="price_low" placeholder="Price low" class="form-control" value="<%= @auto.price_low %>">
        </div>
      </div>

      <!-- Label and input for price_high -->
      <div class="form-group">
        <label for="price_high" class="col-sm-2 control-label">
          Price high
        </label>
        <div class="col-sm-10">
          <input type="text" id="price_high" name="price_high" placeholder="Price high" class="form-control" value="<%= @auto.price_high %>">
        </div>
      </div>

      <!-- Label and input for mpg_city -->
      <div class="form-group">
        <label for="mpg_city" class="col-sm-2 control-label">
          Mpg city
        </label>
        <div class="col-sm-10">
          <input type="text" id="mpg_city" name="mpg_city" placeholder="Mpg city" class="form-control" value="<%= @auto.mpg_city %>">
        </div>
      </div>

      <!-- Label and input for mpg_hwy -->
      <div class="form-group">
        <label for="mpg_hwy" class="col-sm-2 control-label">
          Mpg hwy
        </label>
        <div class="col-sm-10">
          <input type="text" id="mpg_hwy" name="mpg_hwy" placeholder="Mpg hwy" class="form-control" value="<%= @auto.mpg_hwy %>">
        </div>
      </div>

      <!-- Label and input for comment -->
      <div class="form-group">
        <label for="comment" class="col-sm-2 control-label">
          Comment
        </label>
        <div class="col-sm-10">
          <textarea id="comment" name="comment" placeholder="Comment" class="form-control" rows="3"><%= @auto.comment %></textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Auto" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

