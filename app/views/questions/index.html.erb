<div class="page-header">
  <h1>Questions</h1>
</div>

<p><a href="/questions/new" class="btn btn-primary">Add a New Question</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Id auto</th>
      <th>Id user</th>
      <th>Question</th>
      <th>Likes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.id_auto %></td>
        <td><%= question.id_user %></td>
        <td><%= question.question %></td>
        <td><%= question.likes %></td>
        <td>
          <a href="/questions/<%= question.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/questions/<%= question.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_question/<%= question.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

