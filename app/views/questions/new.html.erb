<% if @question.errors.any? %>
  <% @question.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Question</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_question" class="form-horizontal">
      <!-- Label and input for id_auto -->
      <div class="form-group">
        <label for="id_auto" class="col-sm-2 control-label">
          Id auto
        </label>
        <div class="col-sm-10">
          <input type="text" id="id_auto" name="id_auto" placeholder="Id auto" class="form-control" value="<%= @question.id_auto %>">
        </div>
      </div>

      <!-- Label and input for id_user -->
      <div class="form-group">
        <label for="id_user" class="col-sm-2 control-label">
          Id user
        </label>
        <div class="col-sm-10">
          <input type="text" id="id_user" name="id_user" placeholder="Id user" class="form-control" value="<%= @question.id_user %>">
        </div>
      </div>

      <!-- Label and input for question -->
      <div class="form-group">
        <label for="question" class="col-sm-2 control-label">
          Question
        </label>
        <div class="col-sm-10">
          <input type="text" id="question" name="question" placeholder="Question" class="form-control" value="<%= @question.question %>">
        </div>
      </div>

      <!-- Label and input for likes -->
      <div class="form-group">
        <label for="likes" class="col-sm-2 control-label">
          Likes
        </label>
        <div class="col-sm-10">
          <input type="text" id="likes" name="likes" placeholder="Likes" class="form-control" value="<%= @question.likes %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Question" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

