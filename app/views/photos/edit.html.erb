<% if @photo.errors.any? %>
  <% @photo.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Photo #<%= @photo.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_photo/<%= @photo.id %>" class="form-horizontal">
      <!-- Label and input for id_auto -->
      <div class="form-group">
        <label for="id_auto" class="col-sm-2 control-label">
          Id auto
        </label>
        <div class="col-sm-10">
          <input type="text" id="id_auto" name="id_auto" placeholder="Id auto" class="form-control" value="<%= @photo.id_auto %>">
        </div>
      </div>

      <!-- Label and input for link -->
      <div class="form-group">
        <label for="link" class="col-sm-2 control-label">
          Link
        </label>
        <div class="col-sm-10">
          <input type="text" id="link" name="link" placeholder="Link" class="form-control" value="<%= @photo.link %>">
        </div>
      </div>

      <!-- Label and input for comment -->
      <div class="form-group">
        <label for="comment" class="col-sm-2 control-label">
          Comment
        </label>
        <div class="col-sm-10">
          <textarea id="comment" name="comment" placeholder="Comment" class="form-control" rows="3"><%= @photo.comment %></textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Photo" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

